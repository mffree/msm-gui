<h1>
  List of all movies
</h1>

<hr>

<!--Form for adding new movies-->
<hr>

<form action="/insert_movie_record" method="post"> <!--This action must match the route I create for updating the database-->
  <div>
  <label for="title_field">Title</label>
  <input id="title_field" name="the_title" type="text">
  </div>

  <div>
  <label for="year_field">Year</label>
  <input id="year_field" name="the_year" type="text">
  </div>

  <div>
  <label for="duration_field">Duration</label>
  <input id="duration_field" name="the_duration" type="text">
  </div>

  <div>
  <label for="description_field">Description</label>
  <textarea id="description_field" name="the_description" rows="3"></textarea>
  </div>

  <div>
  <label for="image_field">Image</label>
  <input id="image_field" name="the_image" type="text">
  </div>

  <div>
  <label for="director_id_field">Director ID</label>
  <input id="director_id_field" name="the_director_id" type="text">
  </div>


  <button>Create movie</button>
</form>


<hr>

<table border="1">
  <tr>
    <th>
      ID
    </th>

    <th>
      Image
    </th>

    <th>
      Title
    </th>

    <th>
      Year
    </th>

    <th>
      Director
    </th>

    <th>
    </th>
  </tr>

  <% @list_of_movies.order({:year => :desc, :title => :asc}).each do |a_movie| %>
  <tr>
    <td>
      <%= a_movie.id %>
    </td>

    <td>
      <img src="<%= a_movie.image %>" style="width:250px;">
    </td>

    <td>
      <%= a_movie.title %>
    </td>

    <td>
      <%= a_movie.year %>
    </td>

    <td>
      <% matching_directors = Director.where({ :id => a_movie.director_id }) %>
      
      <% the_director = matching_directors.at(0) %>

      <% if the_director == nil %>
        Uh oh! We weren't able to find a director for this movie.
      <% else %>
        <%= the_director.name %>
      <% end %>
    </td>

    <td>
      <a href="/movies/<%= a_movie.id %>">
        Show details
      </a>
    </td>
  </tr>
  <% end %>
</table>
