<h1>
  Director #<%= @the_director.id %> details
</h1>

<div>
  <a href="/directors">Go back</a>
</div>

<!--Delete Director button-->
<div>
  <a href="/delete_director/<%= @the_director.id %>">Delete director</a>
</div>



<!--Form for updating the director-->
<hr>

<form action="/directors/update_director/<%= @the_director.id %>" method="post"> <!--This action must match the route I create for updating the database-->
  <div>
  <label for="director_name_input">Name</label>
  <input id="director_name_input" name="director_name" type="text" value="<%=@the_director.name%>">
  </div>

  <div>
  <label for="director_dob_input">Dob</label>
  <input id="director_dob_input" name="director_dob" type="date" value="<%=@the_director.dob%>">
  </div>

  <div>
  <label for="director_bio_input">Bio</label>
  <textarea id="director_bio_input" name="director_bio" rows="3"> <%=@the_director.bio%></textarea>
  </div>

  <div>
  <label for="director_image_input">Image</label>
  <input id="director_image_input" name="director_image" type="text" value="<%=@the_director.image%>">
  </div>

  <button>Update director</button>
</form>

<!--Director details-->

<hr>

<dl>
  <dt>
    Name
  </dt>
  <dd>
    <%= @the_director.name %>
  </dd>

  <dt>
    Dob
  </dt>
  <dd>
    <%= @the_director.dob %>
  </dd>

  <dt>
    Bio
  </dt>
  <dd>
    <%= @the_director.bio %>
  </dd>

  <dt>
    Image
  </dt>
  <dd>
    <img src="<%= @the_director.image %>" style="width:250px;">
  </dd>

  <dt>
    Created at
  </dt>
  <dd>
    <%= @the_director.created_at %>
  </dd>

  <dt>
    Updated at
  </dt>
  <dd>
    <%= @the_director.updated_at %>
  </dd>
</dl>

<hr>

<h2>Filmography</h2>

<table border="1">
  <tr>
    <th>
      ID
    </th>

    <th>
      Image
    </th>

    <th>
      Title
    </th>

    <th>
      Year
    </th>

    <th>
      Director
    </th>

    <th>
    </th>
  </tr>

  <% the_id = @the_director.id %>

  <% matching_movies = Movie.where({ :director_id => the_id }) %>
  
  <% films = matching_movies.order({ :year => :asc }) %>

  <% films.each do |a_movie| %>
  <tr>
    <td>
      <%= a_movie.id %>
    </td>

    <td>
      <img src="<%= a_movie.image %>" style="width:250px;">
    </td>

    <td>
      <%= a_movie.title %>
    </td>

    <td>
      <%= a_movie.year %>
    </td>

    <td>
      <%= @the_director.name %>
    </td>

    <td>
      <a href="/movies/<%= a_movie.id %>">
        Show details
      </a>
    </td>
  </tr>
  <% end %>
</table>
